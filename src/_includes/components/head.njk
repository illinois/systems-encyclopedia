
{%- set canonical = "https://vis.cs.illinois.edu" + page.url -%}
{%- if not title -%}
  {%- set title = site.meta.title -%}
{%- else -%}
  {%- set title = title + " - " + site.meta.title -%}
{%- endif -%}

{%- if not description -%}
  {%- set description = site.meta.description -%}
{%- endif -%}

{%- set pageImg = "https://vis.cs.illinois.edu/static/default.png" -%}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<title>{{ title }}</title>
<meta name="description" content="{{ description }}">
<link rel="icon" type="image/svg+xml" href="/static/discovery.svg">
<link rel="canonical" href="{{canonical}}" />

{% block og %}
<meta property="og:type" content="article" />
<meta property="og:title" content="{{ title }}" />
<meta property="og:description" content="{{ description }}" />
<meta property="og:url" content="{{ canonical }}" />
<meta property="og:site_name" content="Data Science Discovery" />
{% if pageImg %}
<meta property="og:image" content="{{ pageImg }}" />
{% endif %}
{% endblock og %}

{% block twitter %}
<meta name="twitter:title" content="{{ title }}">
<meta name="twitter:description" content="{{ description }}">
<meta name="twitter:site" content="@DataScienceDuo">
<meta name="twitter:creator" content="@DataScienceDuo">
{% if pageImg %}
<meta name="twitter:image" content="{{ pageImg }}">
{% endif %}
{% endblock twitter %}


