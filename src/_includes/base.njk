<!doctype html>
  <html lang="{{ site.language }}">
  <head>
    {% block head %}
      {% include "components/head.njk" %}
    {% endblock head %}
  </head>
  <body class="d-flex flex-column justify-content-between min-vh-100" data-bs-spy="scroll" data-bs-target="#toc" data-bs-offset="40">
    {% block header %}
      {% include "components/header.njk" %}
    {% endblock header %}

    {% block content %}
      <main class="content container flex-grow-1 mb-2">
        {{ content | safe }}
      </main>
    {% endblock content %}

    {% block footer %}
      {% include "components/footer.njk" %}
    {% endblock footer %}
  </body>
</html>
